<div id="quiz-container">
    <div id="quiz-box">
        <div class="header">
            <h1>SANTHI - PG CHEMISTRY</h1>
            <p>Objective Test: Questions 21 - 50</p>
        </div>
        
        <div id="question-text" class="question">Loading...</div>
        
        <div id="options-container" class="options"></div>

        <div class="controls">
            <div id="progress">Question 1 of 30</div>
            <button id="next-btn" onclick="nextQuestion()" disabled>Next</button>
        </div>
    </div>

    <div id="result-container">
        <h2>Quiz Completed!</h2>
        <div class="score" id="final-score">0/30</div>
        <p id="feedback-text"></p>
        <button id="next-btn" style="background-color: var(--primary-color);" onclick="location.reload()">Take Again</button>
    </div>
